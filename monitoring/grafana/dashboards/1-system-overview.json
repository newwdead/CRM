{
  "title": "1. System Overview - Server Metrics",
  "uid": "system-overview",
  "tags": [
    "system",
    "server",
    "overview"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage %",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Used %"
        },
        {
          "expr": "node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Available %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Disk Usage by Mount",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{fstype=~\"ext.|xfs\"} - node_filesystem_free_bytes) / node_filesystem_size_bytes * 100",
          "legendFormat": "{{mountpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100
        }
      }
    },
    {
      "id": 4,
      "title": "Network Traffic",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "irate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m]) * 8",
          "legendFormat": "RX {{device}}"
        },
        {
          "expr": "irate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m]) * 8",
          "legendFormat": "TX {{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bps"
        }
      }
    },
    {
      "id": 5,
      "title": "System Load Average",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m"
        }
      ]
    },
    {
      "id": 6,
      "title": "Disk I/O",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "irate(node_disk_read_bytes_total[5m])",
          "legendFormat": "Read {{device}}"
        },
        {
          "expr": "irate(node_disk_written_bytes_total[5m])",
          "legendFormat": "Write {{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      }
    },
    {
      "id": 7,
      "title": "System Uptime",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "node_time_seconds - node_boot_time_seconds",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Total CPU Cores",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 24
      },
      "targets": [
        {
          "expr": "count(node_cpu_seconds_total{mode=\"idle\"})",
          "legendFormat": "Cores"
        }
      ]
    },
    {
      "id": 9,
      "title": "Total Memory",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total RAM"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 10,
      "title": "Total Disk Space",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(node_filesystem_size_bytes{fstype=~\"ext.|xfs\"})",
          "legendFormat": "Total Disk"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    }
  ]
}
