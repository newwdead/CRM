{
  "title": "4. Application Monitoring - FastAPI & Celery",
  "uid": "application-monitoring-v2",
  "tags": ["application", "fastapi", "celery"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [{
        "expr": "rate(http_requests_total[5m])",
        "legendFormat": "{{method}} {{handler}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 10,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Response Time (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [{
        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
        "legendFormat": "p95",
        "refId": "A"
      }, {
        "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
        "legendFormat": "p50",
        "refId": "B"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 3,
      "title": "Active HTTP Requests",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8},
      "targets": [{
        "expr": "http_requests_in_progress",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 100, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "HTTP Error Rate",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 8},
      "targets": [{
        "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "OCR Upload Tasks",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [{
        "expr": "rate(ocr_upload_total[5m])",
        "legendFormat": "OCR Uploads",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "title": "Duplicate Detection",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [{
        "expr": "rate(duplicates_found_total[5m])",
        "legendFormat": "Duplicates Found",
        "refId": "A"
      }, {
        "expr": "rate(duplicates_merged_total[5m])",
        "legendFormat": "Duplicates Merged",
        "refId": "B"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 7,
      "title": "Contact Operations",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [{
        "expr": "rate(contacts_created_total[5m])",
        "legendFormat": "Created",
        "refId": "A"
      }, {
        "expr": "rate(contacts_updated_total[5m])",
        "legendFormat": "Updated",
        "refId": "B"
      }, {
        "expr": "rate(contacts_deleted_total[5m])",
        "legendFormat": "Deleted",
        "refId": "C"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
