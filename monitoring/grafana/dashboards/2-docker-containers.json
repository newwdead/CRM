{
  "title": "2. Docker Containers Monitoring",
  "uid": "docker-containers-v2",
  "tags": ["docker", "containers", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Running Containers",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "targets": [{
        "expr": "count(up{job=~\".*\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 3, "color": "yellow"},
              {"value": 5, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Container Status Overview",
      "type": "table",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 6},
      "targets": [{
        "expr": "up{job=~\".*\"}",
        "refId": "A",
        "format": "table"
      }],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "displayMode": "auto"
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Backend Health",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
      "targets": [{
        "expr": "up{job=\"fastapi\"}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "value": "1", "text": "UP"},
            {"type": "value", "value": "0", "text": "DOWN"}
          ],
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Database Health",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
      "targets": [{
        "expr": "up{job=\"postgres\"}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "value": "1", "text": "UP"},
            {"type": "value", "value": "0", "text": "DOWN"}
          ],
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
