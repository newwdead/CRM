{
  "title": "Application Metrics - BizCard CRM",
  "uid": "bizcard-app",
  "tags": ["application", "bizcard-crm"],
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests/sec",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"fastapi-backend\"}[5m])",
          "legendFormat": "{{method}} {{handler}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "OCR Processing Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "rate(ocr_processing_total[5m])",
          "legendFormat": "{{provider}} - {{status}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Total Contacts",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "contacts_total"
        }
      ]
    },
    {
      "id": 4,
      "title": "Total Users",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
      "targets": [
        {
          "expr": "users_total"
        }
      ]
    },
    {
      "id": 5,
      "title": "Auth Success Rate",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(auth_attempts_total{status=\"success\"}[5m]) / rate(auth_attempts_total[5m]) * 100"
        }
      ]
    },
    {
      "id": 6,
      "title": "OCR Processing Time (95th percentile)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(ocr_processing_seconds_bucket[5m]))",
          "legendFormat": "{{provider}}"
        }
      ]
    },
    {
      "id": 7,
      "title": "Contacts Created Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "rate(contacts_created_total[5m])",
          "legendFormat": "Contacts/sec"
        }
      ]
    }
  ]
}
